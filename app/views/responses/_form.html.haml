= form_for @response do |f|
  - if @response.errors.any?
    #error_explanation
      %h2= "#{pluralize(@response.errors.count, "error")} prohibited this response from being saved:"
      %ul
        - @response.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :party_size
    = f.number_field :party_size
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :food_restrictions
    = f.text_area :food_restrictions
  .field
    = f.label :responded_with
    = f.text_field :responded_with
  .field
    = f.label :invitations
    = f.text_field :invitations
  .actions
    = f.submit 'Save'
