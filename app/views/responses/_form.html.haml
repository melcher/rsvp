= simple_form_for @response do |f|
  .form-group
    .form-control-static We've reserved #{@response.invitation.party_size} seates for you!
  - if @response.errors.any?
    #error_explanation
      %h2= "#{pluralize(@response.errors.count, "error")} prohibited this response from being saved:"
      %ul
        - @response.errors.full_messages.each do |msg|
          %li= msg
  = f.input :responded_with, as: :radio_buttons
  - if @response.invitation.party_size > 1
    = f.input :party_size, collection: 1..@response.invitation.party_size, prompt: "How many will be attending?"
  = f.input :comment
  = f.input :food_restrictions, as: :radio_buttons
  = f.button :submit
