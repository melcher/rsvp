%h1 Listing responses

%table
  %thead
    %tr
      %th Party size
      %th Comment
      %th Food restrictions
      %th Responded with
      %th Invitations
      %th
      %th
      %th
      
  %tbody
    - @responses.each do |response|
      %tr
        %td= response.party_size
        %td= response.comment
        %td= response.food_restrictions
        %td= response.responded_with
        %td= response.invitations
        %td= link_to 'Show', response
        %td= link_to 'Edit', edit_response_path(response)
        %td= link_to 'Destroy', response, :method => :delete, :data => { :confirm => 'Are you sure?' }

